<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/welcome_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kim"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Let's get Exercise"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="24sp" />

        <!-- Horizontal ScrollView for popular courses -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Repeat this LinearLayout for each popular course item -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <WebView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/webview1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <WebView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/webview2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <WebView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/webview3"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"/>

                <!-- Repeat ends -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Popular Course Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/popular_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Course"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_box_with_stroke"
                    android:text="squat" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_box_with_stroke"
                    android:text="dumbell curl" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check your activity"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="13dp"
                android:background="@drawable/rounded_box_with_stroke"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/progressbar_upper"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progressBackgroundTint="#FFCDD0"
                        android:progressDrawable="@drawable/circle_progressbar"
                        android:progressTint="@color/main_Color" />

                    <TextView
                        android:id="@+id/pBar_Upper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Upper: 0/100"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/progressbar_lower"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progressBackgroundTint="#FFCDD0"
                        android:progressDrawable="@drawable/circle_progressbar"
                        android:progressTint="@color/main_Color" />

                    <TextView
                        android:id="@+id/pBar_Lower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Lower: 0/100"
                        android:textSize="16sp"

                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
